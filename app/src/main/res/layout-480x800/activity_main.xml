<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_rel_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <RelativeLayout
        android:id="@+id/details_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:background="@color/white"
        android:fillViewport="true"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="25dp"
            android:onClick="scenarioBtn"
            android:text="@string/next" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/next_button"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <Switch
                    android:id="@+id/team_1_revised_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/team_1_overs_switch"
                    android:checked="false"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="10dp"
                    android:paddingTop="15dp"
                    android:text="@string/team_1_revised"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/number_overs_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:textColor="@color/black"
                    android:text="@string/start_innings_overs"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Switch
                    android:id="@+id/team_1_overs_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/number_overs_edit_text"
                    android:checked="true"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="@string/team_1_full_amount"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/team_1_score"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team_1_overs_switch"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/black"
                    android:text="@string/team_1_final_score"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/team_1_wickets"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team_1_score"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="@string/wickets"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/team_1_wickets_edit"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/team_1_score_edit"
                    android:layout_toLeftOf="@+id/team_1_overs_switch"
                    android:layout_toStartOf="@+id/team_1_overs_switch"
                    android:digits="0123456789"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingTop="15dp" />

                <EditText
                    android:id="@+id/number_overs_edit_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/number_overs_text_view"
                    android:layout_toLeftOf="@+id/team_1_revised_switch"
                    android:layout_toStartOf="@+id/team_1_revised_switch"
                    android:digits="0123456789."
                    android:hint="@string/overs"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:nextFocusDown="@id/team_1_wickets_edit"
                    android:paddingTop="15dp" />

                <EditText
                    android:id="@+id/team_1_score_edit"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/team_1_overs_switch"
                    android:layout_toLeftOf="@+id/team_1_overs_switch"
                    android:layout_toStartOf="@+id/team_1_overs_switch"
                    android:digits="0123456789"
                    android:hint="@string/total"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="4"
                    android:nextFocusForward="@id/team_1_wickets_edit"
                    android:paddingTop="15dp" />

                <TextView
                    android:id="@+id/team_1_scoreTwo"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team_1_revised_switch"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="@string/team_1_score_DL"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/team_1_wickets_editTwo"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/team_1_score_editTwo"
                    android:layout_toLeftOf="@+id/team_1_overs_switch"
                    android:layout_toStartOf="@+id/team_1_overs_switch"
                    android:digits="0123456789"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingTop="15dp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/team_1_score_editTwo"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/team_1_revised_switch"
                    android:layout_toLeftOf="@+id/team_1_revised_switch"
                    android:layout_toStartOf="@+id/team_1_revised_switch"
                    android:digits="0123456789"
                    android:hint="@string/total"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="4"
                    android:nextFocusForward="@id/team_1_wickets_editTwo"
                    android:paddingTop="15dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/team_1_wicketsTwo"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team_1_score_editTwo"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="@string/wickets"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/team_1_oversTwo"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team_1_wicketsTwo"
                    android:paddingTop="15dp"
                    android:paddingBottom="5dp"
                    android:text="@string/team2overs_sc2"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/team_1_overs_editTwo"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/team_1_oversTwo"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:digits="0123456789."
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:paddingTop="15dp"
                    android:visibility="invisible" />


            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>
</RelativeLayout>
