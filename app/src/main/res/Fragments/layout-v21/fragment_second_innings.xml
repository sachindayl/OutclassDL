<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:background="#FAFAFA"
                android:fillViewport="true">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:id="@+id/second_innings_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/adView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FAFAFA"
        android:orientation="vertical">

        <Button
            android:id="@+id/second_innings_calc_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_design"
            android:clickable="true"
            android:onClick="activateCalcBtn"
            android:text="@string/calculate"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/second_innings_button_container"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:context=".Scenario2">

            <LinearLayout
                android:id="@+id/tip_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:weightSum="8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/second_innings_tip"/>

                <LinearLayout
                    android:id="@+id/first_innings_interruption_check_spinner_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Team 1 had Interruptions?"/>

                    <Spinner
                        android:id="@+id/first_innings_interruption_check_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_innings_team1_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tip_container"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/second_innings_team_1_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/team_1_final_score"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/second_innings_team_1_wickets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/wickets_inning_1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/second_innings_number_overs_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/start_inning_2_overs"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/second_innings_team_1_score_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:hint="@string/total"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="4"
                        android:nextFocusForward="@+id/second_innings_team_1_wickets_et"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                    <EditText
                        android:id="@id/second_innings_team_1_wickets_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="2"
                        android:nextFocusForward="@+id/second_innings_number_overs_et"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                    <EditText
                        android:id="@id/second_innings_number_overs_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789."
                        android:gravity="center"
                        android:hint="@string/overs"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:nextFocusForward="@+id/second_innings_which_over_interruption_1_et"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_innings_interruption_spinner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/second_innings_team1_info_container"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/number_of_interruptions"/>

                <Spinner
                    android:id="@+id/second_innings_interruptions_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_1_si"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_innings_interruption_spinner_container"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/second_innings_interruption_1_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/second_innings_interruption_spinner_container"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/second_innings_interruption_1_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/interruption_1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingEnd="10dp"
                        android:paddingStart="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <TextView
                                android:id="@+id/second_innings_which_over_interruption_1_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="2"
                                android:text="@string/interruption_1_over"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@id/second_innings_which_over_interruption_1_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="6"
                                android:digits="0123456789."
                                android:gravity="center"
                                android:hint="@string/overs"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:maxLength="4"
                                android:nextFocusForward="@+id/second_innings_total_interruption_1_et"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <TextView
                                android:id="@+id/second_innings_team2_total_interruption_1_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="2"
                                android:text="@string/t2_total_at_interruption"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@id/second_innings_total_interruption_1_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="6"
                                android:digits="0123456789"
                                android:gravity="center"
                                android:hint="@string/total"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="4"
                                android:nextFocusForward="@+id/second_innings_wickets_lost_interruption_1_et"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <TextView
                                android:id="@+id/second_innings_wickets_lost_interruption_1_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="2"
                                android:text="@string/interruption_1_wickets"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@id/second_innings_wickets_lost_interruption_1_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="6"
                                android:digits="0123456789"
                                android:gravity="center"
                                android:hint="@string/wickets"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="2"
                                android:nextFocusForward="@+id/second_innings_overs_remaining_interruption_1_et"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <TextView
                                android:id="@+id/second_innings_overs_remaining_interruption_1_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="2"
                                android:text="@string/interruption_1_remaining"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@+id/second_innings_overs_remaining_interruption_1_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="6"
                                android:digits="0123456789."
                                android:gravity="center"
                                android:hint="@string/overs"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:maxLength="4"
                                android:nextFocusForward="@+id/second_innings_which_over_interruption_2_et"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_2_si"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view_1_si"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/second_innings_interruption_2_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/second_innings_interruption_1_container"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/second_innings_interruption_2_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/interruption_2"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingEnd="10dp"
                        android:paddingStart="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <TextView
                                android:id="@+id/second_innings_which_over_interruption_2_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="2"
                                android:text="@string/interruption_1_over"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@id/second_innings_which_over_interruption_2_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="6"
                                android:digits="0123456789."
                                android:gravity="center"
                                android:hint="@string/overs"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:maxLength="4"
                                android:nextFocusForward="@+id/second_innings_total_interruption_2_et"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <TextView
                                android:id="@+id/second_innings_team2_total_interruption_2_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="2"
                                android:paddingBottom="10dp"
                                android:text="@string/t2_total_at_interruption"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@id/second_innings_total_interruption_2_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="6"
                                android:digits="0123456789"
                                android:gravity="center"
                                android:hint="@string/total"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="4"
                                android:nextFocusForward="@+id/second_innings_wickets_lost_interruption_2_tv"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <TextView
                                android:id="@id/second_innings_wickets_lost_interruption_2_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="2"
                                android:paddingBottom="10dp"
                                android:text="@string/interruption_1_wickets"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@+id/second_innings_wickets_lost_interruption_2_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="6"
                                android:digits="0123456789"
                                android:gravity="center"
                                android:hint="@string/wickets"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="2"
                                android:nextFocusForward="@+id/second_innings_overs_remaining_interruption_2_et"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <TextView
                                android:id="@+id/second_innings_overs_remaining_interruption_2_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="2"
                                android:text="@string/interruption_1_remaining"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@+id/second_innings_overs_remaining_interruption_2_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="6"
                                android:digits="0123456789."
                                android:gravity="center"
                                android:hint="@string/overs"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:maxLength="4"
                                android:nextFocusForward="@+id/second_innings_which_over_interruption_3_et"
                                android:paddingBottom="15dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_3_si"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view_2_si"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/second_innings_interruption_3_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/second_innings_interruption_2_container"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/second_innings_interruption_3_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/interruption_3"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textStyle="bold|italic"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingEnd="10dp"
                        android:paddingStart="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <TextView
                                android:id="@+id/second_innings_which_over_interruption_3_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="2"
                                android:text="@string/interruption_1_over"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@id/second_innings_which_over_interruption_3_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="6"
                                android:digits="0123456789."
                                android:gravity="center"
                                android:hint="@string/overs"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:maxLength="4"
                                android:nextFocusForward="@+id/second_innings_total_interruption_3_et"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <TextView
                                android:id="@+id/second_innings_team2_total_interruption_3_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="2"
                                android:paddingBottom="10dp"
                                android:text="@string/t2_total_at_interruption"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@id/second_innings_total_interruption_3_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
