<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sportsoutclass.outclassdl" >

    <application
        android:name=".StateClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Scenario2"
            android:label="@string/title_activity_scenario2"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sportsoutclass.outclassdl.MainActivity" />
        </activity>
        <activity
            android:name=".Team2Info"
            android:label="@string/title_activity_team2_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sportsoutclass.outclassdl.MainActivity" />
        </activity>
        <activity
            android:name=".Scenario1"
            android:label="@string/title_activity_scenario1"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sportsoutclass.outclassdl.MainActivity" />
        </activity>
    </application>

</manifest>
